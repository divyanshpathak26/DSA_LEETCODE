class Solution {
public:
    bool isPowerOfTwo(int n) {
        // int ans=1;
        
        // for(int i=1;i<=31;i++){
        //     if(ans==n){
        //         return true;
        //     }
        //     if(ans<INT_MAX/2)
        //     ans=ans*2;
        // }
        // return false;

        if(n==1)
        return true;
        else if(n<=0)
        return false;
        else 
        return  (n%2==0) && isPowerOfTwo(n/2);


      
        
        
    }
};
